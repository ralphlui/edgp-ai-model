# Environment Configuration for EDGP AI Model Service
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_PROFILE=default
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Default LLM Provider (openai, anthropic, bedrock)
DEFAULT_LLM_PROVIDER=bedrock
DEFAULT_MODEL=gpt-4

# External Microservice Integration URLs
# Data Validation Service
DATA_VALIDATOR_URL=http://localhost:8001
DATA_VALIDATOR_API_KEY=your_data_validator_api_key_here

# Regulatory Compliance Service  
REGULATORY_SERVICE_URL=http://localhost:8002
REGULATORY_SERVICE_TOKEN=your_regulatory_service_token_here

# Automation Engine Service
AUTOMATION_ENGINE_URL=http://localhost:8003
AUTOMATION_ENGINE_API_KEY=your_automation_engine_api_key_here

# Business Intelligence Service
BI_SERVICE_URL=http://localhost:8004
BI_SERVICE_CLIENT_ID=your_bi_service_client_id_here
BI_SERVICE_CLIENT_SECRET=your_bi_service_client_secret_here

# Governance Platform Service
GOVERNANCE_PLATFORM_URL=http://localhost:8005
GOVERNANCE_CERT_PATH=/path/to/client.crt
GOVERNANCE_KEY_PATH=/path/to/client.key

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_API_KEY=your_notification_service_api_key_here

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Redis Configuration (for caching and message queues)
REDIS_URL=redis://localhost:6379/0

# Vector Store Configuration
VECTOR_STORE_TYPE=chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
ORCHESTRATION_MODE=langgraph

# MCP Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=9000
MCP_PROTOCOL_VERSION=1.0

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
